package EXERCISE2;

public class EXERCISE2 {

	public static void main(String[] args) {
        // Definir arrays con las palabras en inglés y sus traducciones al español
        String[] ingles = {"Hello", "Goodbye", "Please", "Thank you", "Yes", "No", "Book", "Pen", "House", "Friend"};
        String[] espanol = {"Hola", "Adiós", "Por favor", "Gracias", "Sí", "No", "Libro", "Bolígrafo", "Casa", "Amigo"};
        
        // Imprimir encabezado de las columnas
        System.out.printf("%-15s %-15s%n", "Inglés", "Español");
        System.out.println("-----------------------------");
        
        // Imprimir palabras en inglés con sus traducciones en español en formato de columna
        for (int i = 0; i < ingles.length; i++) {
            System.out.printf("%-15s %-15s%n", ingles[i], espanol[i]);
        }


	}

}
